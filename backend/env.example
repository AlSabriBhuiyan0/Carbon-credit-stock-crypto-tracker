# Server Configuration
NODE_ENV=development
PORT=5001
API_URL=http://localhost:5001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stock_carbon_tracker
# Alternative MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/stock_carbon_tracker

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys for Data Sources
CEIC_API_KEY=your_ceic_api_key_here
DSE_API_KEY=your_dse_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here

# Carbon Credit Data Sources
UN_OFFSET_PLATFORM_API_KEY=your_un_offset_platform_key
GOLD_STANDARD_API_KEY=your_gold_standard_key
UNFCCC_DI_API_KEY=your_unfccc_di_api_key_here

# Blockchain Configuration (Algorand)
ALGORAND_NETWORK=testnet
ALGORAND_INDEXER_URL=https://algoindexer.testnet.algoexplorer.io
ALGORAND_ALGOD_URL=https://testnet-api.algonode.cloud
ALGORAND_ALGOD_TOKEN=your_algorand_token_here

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@stockcarbontracker.com

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External Services
WEATHER_API_KEY=your_weather_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
