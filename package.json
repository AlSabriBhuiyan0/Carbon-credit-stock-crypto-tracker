{
  "name": "carbon-credit-stock-tracker-testspire",
  "version": "1.0.0",
  "description": "TestSpire testing suite for Carbon Credit & Stock Tracker",
  "main": "testspire.config.js",
  "scripts": {
    "test": "jest",
    "test:backend": "jest tests/backend",
    "test:frontend": "jest tests/frontend",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:security": "npm audit && snyk test",
    "test:lint": "eslint tests/ --ext .js,.jsx,.ts,.tsx",
    "test:format": "prettier --write tests/**/*.{js,jsx,ts,tsx}",
    "test:setup": "node scripts/setup-test-db.js",
    "test:cleanup": "node scripts/cleanup-test-db.js",
    "test:report": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:ci": "npm run test:lint && npm run test:format && npm run test:all",
    "testsprite": "node run-testsprite.js",
    "testsprite:auth": "node testsprite_tests/auth-tests.js",
    "testsprite:api": "node testsprite_tests/api-tests.js",
    "testsprite:setup": "node -e \"console.log('TestSprite is ready! Run: npm run testsprite')\""
  },
  "keywords": [
    "testing",
    "testspire",
    "jest",
    "playwright",
    "carbon-credits",
    "stock-tracker",
    "api-testing",
    "e2e-testing"
  ],
  "author": "TestSpire Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@testsprite/testsprite-mcp": "^0.0.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "artillery": "^2.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-testing-library": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^3.0.2",
    "jest-html-reporter": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jest-playwright-preset": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,jsx,ts,tsx}",
      "<rootDir>/tests/**/*.spec.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "tests/**/*.{js,jsx,ts,tsx}",
      "!tests/setup/**",
      "!tests/utils/**",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/carbon-credit-stock-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/carbon-credit-stock-tracker/issues"
  },
  "homepage": "https://github.com/your-org/carbon-credit-stock-tracker#readme"
}
